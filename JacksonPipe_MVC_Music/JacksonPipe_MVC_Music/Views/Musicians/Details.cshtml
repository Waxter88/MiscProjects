@model JacksonPipe_MVC_Music.Models.Musician

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Musician</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instrument)
        </dt>
        <dd class = "col-sm-10">
			@*Display primary instrument name*@
			@Html.DisplayFor(model => model.Instrument.Name)   
		</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Play)
        </dt>
        <dd class = "col-sm-10">
            @{
                int instrumentCount = Model.Play.Count;
                if(instrumentCount > 0)
                {
                    string firstInst = Model.Play.FirstOrDefault().Instrument.Name;
                    if(instrumentCount > 1)
                    {
                        string instList = "";
                        var i = Model.Play.ToList();
                        for (int j = 1; j < instrumentCount; j++)
                        {
							instList += i[j].Instrument.Name + "<br /> ";
                        }
                            <a class="" role="button" data-bs-toggle="collapse" href="#collapseInstruments@(Model.ID)" aria-expanded="false" aria-controls="collapseInstruments@(Model.ID)">
							@firstInst <span class="badge bg-info">@instrumentCount</span>
                            </a>
							<div class="collapse" id="collapseInstruments@(Model.ID)">
							    @Html.Raw(instList)
                            </div>
                    }
					else
					{
						@firstInst
					}
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
